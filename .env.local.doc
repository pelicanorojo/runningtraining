# DEVELOPMENT DOCKER(|-COMPOSE)
# Postgre DB
POSTGRES_DB=marathon_db
APP_SCHEMA_NAME=marathonapp

#DB_DATA_PATH=./COMPOSE_SETUP/postgres-data
