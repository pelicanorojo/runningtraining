# Admin (for user creation only, not used by app)
POSTGRES_USER=pgadmin
POSTGRES_PASSWORD=xxxxxxx
POSTGRES_SERVICE=postgres
POSTGRES_PORT=5432

# Migration user (elevated but not full admin)
POSTGRES_MIGRATION_USER=migrator
POSTGRES_MIGRATION_PASSWORD=yyyyyyy

# App user (limited permissions)
POSTGRES_APP_USER=kipchogue #don't use capital letters in user names, foe simplicityndd
POSTGRES_APP_PASSWORD=zzzzzzz


# DB url, defaults for port, hardcoded host as 'postgres' (the service name in docker-compose)
DATABASE_MIGR_URL="postgresql://$POSTGRES_MIGRATION_USER:$POSTGRES_MIGRATION_PASSWORD@$POSTGRES_SERVICE:$POSTGRES_PORT/$POSTGRES_DB?schema=$APP_SCHEMA_NAME"
DATABASE_NEXT_URL="postgresql://$POSTGRES_APP_USER:$POSTGRES_APP_PASSWORD@$POSTGRES_SERVICE:$POSTGRES_PORT/$POSTGRES_DB?schema=$APP_SCHEMA_NAME"

#OVERWRITE with DATABASE_MIGR_URL when doing migrations
DATABASE_URL=$DATABASE_NEXT_URL
